<div
  class="this_page container-fluid w-full d-flex justify-content-center align-items-center"
>
  <div class="form_border p-3 border border-5 w-25">
    <div
      class="form_holder p-4 d-flex flex-column justify-content-center align-items-center"
    >
      <img class="logo_img mt-1" src="/virtualFairs.png" />
      <h2 class="form_title mb-5">Admin Login Here</h2>
      <form class="w-100 p-1" action="/loginAdmin" method="POST">
        <div class="form-group mb-2">
          <label for="email" class="mb-1">Email</label>
          <input
            type="email"
            class="form-control"
            id="email"
            name="email"
            placeholder="yourname@company.com"
          />
        </div>
        <div class="form-group mb-2">
          <label for="password" class="mb-1">Password</label>
          <input
            type="password"
            class="form-control"
            id="password"
            name="password"
            placeholder="*************"
          />
        </div>
        <div class="d-flex align-items-center justify-content-between">
          <div class="d-flex align-items-center">
            <input
              class="form-check-input"
              type="checkbox"
              value=""
              aria-label="Checkbox for following text input"
            />
            <p class="form_small_text my-0 mx-1">Keep me signed in</p>
          </div>
          <p class="form_small_text my-0 mx-1">
            <a class="form_link" href="/forgotPassword">Forgot Password?</a>
          </p>
        </div>
        <div class="w-100 d-flex justify-content-center my-5">
          <button type="submit" class="submit_btn rounded-pill px-5 py-2">
            Login
          </button>
        </div>
      </form>
    </div>
  </div>
</div>
