<!-- Page Wrapper -->
<div class="wrapper">
    <%- include('./dashboard/sidebar.ejs'); %>

        <div class="Container">
            <!-- topbar starts -->
            <%- include('./dashboard/topbar.ejs'); %>
                <!-- topbar ends -->

                <!-- PAge Content starts -->
                <div class="ContentRow">
                    <div class="form_Container">
                        <h3>Add New Vendor Details</h3>
                        <form class="w-100 admin_vendor_form" action="/vendor" method="POST">
                            <div class="form_box">
                                <!-- <div class="d-flex gap-2"> -->
                                <h5>Personal Information</h5>
                                <div class="form-group mb-2">
                                    <label for="firstname" class="mb-1">First Name</label>
                                    <input type="text" class="form-control" id="firstname" name="firstname"
                                        placeholder="John.." />
                                </div>
                                <div class="form-group mb-2">
                                    <label for="lastname" class="mb-1">Last Name</label>
                                    <input type="text" class="form-control" id="lastname" name="lastname"
                                        placeholder="Doe.." />
                                </div>
                                <!-- </div> -->
                                <h5>Contact Information</h5>
                                <div class="form-group mb-2">
                                    <label for="email" class="mb-1">Email</label>
                                    <input type="email" class="form-control" id="email" name="email"
                                        placeholder="yourname@company.com" />
                                </div>
                                <div class="form-group mb-2">
                                    <label for="address" class="mb-1">Address</label>
                                    <input type="text" class="form-control" id="address" name="address"
                                        placeholder="John's Address" />
                                </div>
                                <div class="form-group mb-2">
                                    <label for="phone" class="mb-1">Phone No.</label>
                                    <input type="text" class="form-control" id="phone"
                                        name="phone" placeholder="9876543210" />
                                </div>
                                
                            </div>
                            <div class="form_box">
                                <h5>Business Information</h5>
                                <div class="form-group mb-2">
                                    <label for="business" class="mb-1">Business Name</label>
                                    <input type="text" class="form-control" id="business" name="business"
                                        placeholder="John's business.." />
                                </div>
                                <div class="form-group mb-2">
                                    <label for="abnnumber" class="mb-1">ABN Number</label>
                                    <input type="text" class="form-control" id="abnnumber" name="abnnumber"
                                        placeholder="ABN Number.." />
                                </div>
                                <!-- </div> -->
                                <h5>Contact Information</h5>
                                <!-- <div class="form-group mb-2">
                                    <label for="email" class="mb-1">Email</label>
                                    <input type="email" class="form-control" id="email" name="email"
                                        placeholder="yourname@company.com" />
                                </div> -->
                                <div class="form-group mb-2">
                                    <label for="password" class="mb-1">Password</label>
                                    <input type="password" class="form-control" id="password" name="password"
                                        placeholder="*************" />
                                </div>
                                <div class="form-group mb-2">
                                    <label for="confirmPassword" class="mb-1">Confirm Password</label>
                                    <input type="password" class="form-control" id="confirmPassword"
                                        name="confirmPassword" placeholder="*************" />
                                </div>
                                <div class="d-flex align-items-center">
                                    <input class="form-check-input" type="checkbox" value=""
                                        aria-label="Checkbox for following text input" />
                                    <p class="form_small_text my-0 mx-2">
                                        By Signing Up, I agree with
                                        <a class="form_link" href="#">&nbsp; Terms & Condition</a>
                                    </p>
                                </div>
                                <div class="w-100 d-flex justify-content-center mt-4">
                                    <!-- <a  href="/verifyOtp"> -->
                                    <input type="submit" onclick="flipVerify()" name="Register" value="Register"
                                        class="submit_btn rounded-pill px-5 py-2" />
                                    <!-- </a> -->
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
                <!-- PAge Content ends -->
        </div>
</div>